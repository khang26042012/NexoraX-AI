modules = ["nodejs-20", "python-3.12", "web"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NexoraX AI Server"

[[workflows.workflow]]
name = "NexoraX AI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32769
externalPort = 6000

[[ports]]
localPort = 33521
externalPort = 3000

[[ports]]
localPort = 34265
externalPort = 3002

[[ports]]
localPort = 35509
externalPort = 5173

[[ports]]
localPort = 35903
externalPort = 4200

[[ports]]
localPort = 37623
externalPort = 5000

[[ports]]
localPort = 39579
externalPort = 3003

[[ports]]
localPort = 42321
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "server.py"]
