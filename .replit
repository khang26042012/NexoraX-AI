modules = ["nodejs-20", "web", "python-3.11"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NexoraX AI Server"

[[workflows.workflow]]
name = "NexoraX AI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38283
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "server.py"]
